        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/tigi" android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/toniandguy"
        android:layout_weight="1"/>

</LinearLayout>


