<?xml version="1.0" encoding="UTF-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.revereselogistics.HomeCare_prod"
    android:background="@drawable/blue"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:text="PERSONAL CARE PRODUCTS"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/dove"
        android:layout_weight="1"
        android:id="@+id/cif"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/aviance"
        android:layout_weight="1"
        android:id="@+id/comfort"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/axe"
        android:layout_weight="1"
        android:id="@+id/wheel"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/breeze"
        android:layout_weight="1"
        android:id="@+id/domex"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/citra"
        android:layout_weight="1"
        android:id="@+id/ri_n"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/clear"
        android:layout_weight="1"
        android:id="@+id/rin"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
