        android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/lakme"
        android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/lifebouy"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/lux"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/pears"
        android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/pepsodent"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:src="@drawable/ponds"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="0dp"
